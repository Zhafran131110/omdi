    <div class="text">
      <h2>Peserta NON OLYMPIAD</h2>
      <p id="jumlah2">Memuat...</p>
    </div>
  </div>

  <script>
    // Konfigurasi spreadsheet
    const dataSources = [
      {
        id: "1AyngHAarfMYQduQeabpE5khaQjYjQ3oPuWhsPcyzTlw",
        sheet: "Data Rapi",
        target: "jumlah"
      },
      {
        id: "1MYTnFoJexXIjnVLM21Tca1O8Kslw-C_fShxpKQTfJfQ",
        sheet: "Form Responses 1",
        target: "jumlah2"
      }
    ];

    // Fungsi ambil jumlah baris
    function ambilJumlahBaris({ id, sheet, target }) {
      const url = `https://docs.google.com/spreadsheets/d/${id}/gviz/tq?tqx=out:csv&sheet=${encodeURIComponent(sheet)}`;
      fetch(url)
        .then(res => res.text())
        .then(csv => {
          const delimiter = csv.includes(";") ? ";" : ",";
          const rows = csv.trim().split("\n");
          const jumlah = rows.length > 1 ? rows.length - 1 : 0;
          document.getElementById(target).textContent = jumlah;
        })
        .catch(err => {
          document.getElementById(target).textContent = "Gagal memuat üò¢";
          console.error(`Gagal memuat data dari ${sheet}:`, err);
        });
    }

    // Jalankan untuk semua sumber data
    dataSources.forEach(ambilJumlahBaris);
  </script>
